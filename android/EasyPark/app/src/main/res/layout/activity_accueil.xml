<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.easypark.easypark.AccueilActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHERCHER UNE PLACE :"
        android:id="@+id/texChercherUnePlace"
        android:layout_weight="0.03"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AUTOUR DE MOI"
        android:id="@+id/butAutourMoi"
        android:layout_weight="0.03"
        android:layout_above="@+id/butAutourDesti"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="69dp" />

    <Button
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="AUTOUR D&apos;UNE DESTINATION"
        android:id="@+id/butAutourDesti"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:layout_marginBottom="154dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
